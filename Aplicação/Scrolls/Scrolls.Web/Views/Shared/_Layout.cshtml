                <ul class="social d-flex">
                    <li><a href="http://facebook.com/"><i class="icon ion-logo-facebook"></i></a></li>
                    <li><a href="http://twitter.com/"><i class="icon ion-logo-twitter"></i></a></li>
                    <li><a href="http://http://instagram.com/"><i class="icon ion-logo-instagram"></i></a></li>
                </ul>
            </div><!-- Area de Publicidade -->

