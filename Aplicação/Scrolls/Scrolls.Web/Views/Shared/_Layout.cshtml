            <a href="#" class="nav-link">Chaveiros</a>
            <a href="#" class="nav-link">Mangás</a>
            <a href="#" class="nav-link">Acessórios</a>
        </div><!-- sanduiche -->

        <nav class="navbar navbar-expand-md searchbar">
            <form class="input-group">
                <input type="text" class="form-control rounded-left" placeholder="Pesquisar">
                <button class="btn btn-search" type="submit"><i class="icon ion-md-search"></i></button>
            </form>
        </nav><!-- navbar pesuisa -->

    </div><!-- Navbar Mobile -->

    <div class="cart-bg-overlay"></div>

    <div class="right-side-cart-area">

        <!-- Cart Button -->
        <div class="cart-button">
            <a class="" href="#" id="rightSideCart"><span class="icon ion-md-cart mdl-badge mdl-badge--overlap" data-badge="1"></span></a>
        </div>

        <div class="cart-content d-flex">

            <!-- Cart List Area -->
            <div class="cart-list">

                <!-- Single Cart Item -->
                <div class="single-cart-item">
                    <a href="#" class="product-image">
                        <img src="~/img/product-img/product-1.png" class="img-fluid py-3" alt="">
                        <!-- Cart Item Desc -->
                        <div class="cart-item-desc">
                            <span class="product-remove"><i class="fa fa-close" aria-hidden="true"></i></span>
                            <span class="badge">Mango</span>
                            <h6>Button Through Strap Mini Dress</h6>
                            <p class="size">Size: S</p>
                            <p class="color">Color: Red</p>
                            <p class="price">$45.00</p>
                        </div>
                    </a>
                </div>

            </div>

            <!-- Cart Summary -->
            <div class="cart-amount-summary">

                <h2>Sumario</h2>
                <ul class="summary-table">
                    <li><span>SUBTOTAL:</span> <span>$274.00</span></li>
                    <li><span>FRETE:</span> <span>Free</span></li>
                    <li></li>
                    <li><span>TOTAL:</span> <span>$232.00</span></li>
                </ul>
                <div class="checkout-btn mt-100">
                    <a href="#" class="btn essence-btn">Verificar Carrinho</a>
                </div>
            </div>

        </div>
    </div><!-- Carrinho boladão -->

    <main class="container-fluid p-0">
        @RenderBody()
    </main><!-- Corpo -->

    <footer class="container-fluid">
        <div class="row justify-content-lg-center justify-content-md-between">

