
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Cadastrar-se</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Hind:400,700" rel="stylesheet">
    <link href="https://unpkg.com/ionicons@4.4.4/dist/css/ionicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/login-style.css">
    <link rel="shortcut icon" href="~img/icone_scrolls.ico">
</head>
<body class="container py-5">
    <div class="row justify-content-end">
        <div class="col-md-5 bg-light px-5 py-4 rounded">
            <h3>Cadastrar</h3>
            <form method="post" action="/Cliente/JoinPage">
                <div class="form-group">
                    <label for="nome" class="col-sm-12 col-form-label col-form-label-lg">Nome</label>
                    <input type="text" class="form-control form-control-lg" name="cliente.Nome" id="nome" placeholder="Digite seu Nome">
                </div>
                <div class="form-group">
                    <label for="sobrenome" class="col-sm-12 col-form-label col-form-label-lg">Sobrenome</label>
                    <input type="text" class=" form-control form-control-lg" name="cliente.Sobrenome" id="sobrenome" placeholder="Digite seu Sobrenome">
                </div>
                <div class="form-group">
                    <label for="cpf" class="col-sm-12 col-form-label col-form-label-lg">CPF</label>
                    <input type="text" class=" form-control form-control-lg" name="cliente.CPF" id="cpf" placeholder="Digite seu CPF">
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-12 col-form-label col-form-label-lg">Seu Email</label>
                    <input type="email" class=" form-control form-control-lg" name="cliente.Email" id="email" placeholder="Digite seu Email">
                </div>
                <div class="form-group">
                    <label for="confirme-email" class="col-sm-12 col-form-label col-form-label-lg">Confirmar Email</label>
                    <input type="email" class=" form-control form-control-lg" id="confirme-email" placeholder="Digite seu Email novamente">
                </div>
                <div class="form-group">
                    <label for="senha" class="col-sm-12 col-form-label col-form-label-lg">Senha</label>
                    <input type="password" class=" form-control form-control-lg" name="cliente.Senha" id="senha" placeholder="Digite sua Senha">
                </div>
                <div class="form-group">
                    <label for="confirme-senha" class="col-sm-12 col-form-label col-form-label-lg">Confirmar Senha</label>
                    <input type="password" class=" form-control form-control-lg" id="confirme-senha" placeholder="Digite sua Senha novamente">
                </div>
                <button type="submit" class="btn btn-confirmar w-100 mt-5">Cadastrar</button>
            </form>
            <div class="col-sm-12 d-flex justify-content-center mt-2">
                <p>Não tem um conta ainda? <a href="login-page.html">Crie uma aqui</a></p>
            </div>
            <hr>
            <div class="col-sm-12 d-flex justify-content-center mt-4">
                <div class="col-sm-6 ">
                    <button type="button" class="btn btn-google w-100"><img src="google.png" alt=""></button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>
</html>
