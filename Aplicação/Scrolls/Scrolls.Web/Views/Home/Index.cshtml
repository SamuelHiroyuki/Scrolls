
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="pincipal d-inline-flex">

    <div class="col-2 col-sm-3 p-0">
        <div class="list-group">
            <a class="list-group-item list-group-item-action disabled" href="#">Selecionar Categoria<i class="mdl-icon-toggle ion-ios-arrow-down"></i></a>
            <a class="list-group-item list-group-item-action" href="#">Opção 1</a>
            <a class="list-group-item list-group-item-action" href="#">Opção 2</a>
            <a class="list-group-item list-group-item-action" href="#">Opção 3</a>
            <a class="list-group-item list-group-item-action" href="#">Opção 4</a>
            <a class="list-group-item list-group-item-action" href="#">Opção 5</a>
            <a class="list-group-item list-group-item-action" href="#">Opção 6</a>
        </div>
    </div><!-- Botão das categorias -->

    <div class="col-8 col-sm-9  p-0">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/img/carrossel-img/img1.jpg" alt="Primeiro Slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/carrossel-img/img1.jpg" alt="Segundo Slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/carrossel-img/img1.jpg" alt="Terceiro Slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Próximo</span>
            </a>
        </div>
    </div><!-- Carrosel -->

</section>

