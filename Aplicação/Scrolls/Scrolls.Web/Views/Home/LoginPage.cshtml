
@{
    Layout = null;
}

<!DOCTYPE html>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Hind:400,700" rel="stylesheet">
    <link href="https://unpkg.com/ionicons@4.4.4/dist/css/ionicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/login-style.css">
    <link rel="shortcut icon" href="~/img/icone_scrolls.ico">
</head>
<body class="container py-5">
    <div class="row justify-content-end">
        <div class="col-md-5 bg-light px-5 py-4 rounded">
            <h3>Login</h3>
            <form action="/Home/Logar" method="post">
                <div class="form-group @ViewBag.V">
                    <label for="email" class="col-sm-12 col-form-label col-form-label-lg">Endereço de email</label>
                    <input type="email" class="form-control form-control-lg" nome="n" value="@ViewBag.Nome" id="email" aria-describedby="emailHelp" placeholder="Seu email">
                </div>
                <div class="form-group @ViewBag.V">
                    <div class="d-flex justify-content-between align-items-center">
                        <label for="password" class="col-sm-2 col-form-label col-form-label-lg">Senha</label>
                        <p class="m-0"><a href="#">Esqueceu senha senha?</a></p>
                    </div>
                    <input type="password" class=" form-control form-control-lg" name="s
                    " id="password" placeholder="Senha">
                </div>
                <div class="bg-danger p-2 d-none text-center rounded text-light" style='@ViewBag.LoginE'>
                    <Strong>Login inválido</strong>
                        <br>
                    <small>Email e/ou Senha incorretos</small>
                </div>
                <button type="submit" class="btn btn-confirmar w-100 mt-5">Logar</button>
            </form>            
            <div class="col-sm-12 d-flex justify-content-center mt-2">
                <p>Não tem uma conta ainda? <a href="join-page.html">Crie uma aqui</a></p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>
</html>
