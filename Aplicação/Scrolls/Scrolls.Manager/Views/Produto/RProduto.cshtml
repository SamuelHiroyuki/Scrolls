<script>
    function m(x) {
        var p = $('form[name=' + x + '] input');

        if (p.val() <= 0) {
            toastr.warning('O valor a se repor deve ser no mínimo 1!', 'Atenção!')
            p.addClass('bc-r');
        } else {
            p.removeClass('bc-r');
            $('form[name=' + x + ']').submit();
        }
    }
</script>


<style>
    .bc-r {
        border-color: #cc2424;
    }
</style>

