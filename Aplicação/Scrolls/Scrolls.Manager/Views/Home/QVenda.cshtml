
@{
    ViewBag.Title = "Consulta de vendas";
}

<div class="sidebar-menu">

    <div class="sidebar-menu-inner" style="position: fixed !important;">

        <div class="sidebar-user-info">
            <div class="sui-normal">
                <a href="/Home/Perfil" class="user-link">
                    <img src="~/Assets/images/thumb-1@2x.png" width="55" alt="" class="img-circle">
                </a>
            </div>
        </div>

        <ul id="main-menu" class="main-menu">

            <li>
                <a href="#">
                    <i class="entypo-home" style="padding-left: 4px;"></i>
                    <i style="font-size: 8px; padding-left: 6px;">Loja</i>
                </a>
            </li>
        </ul>

    </div>

</div>
<div class="main-content" id="mainc">
    <h3>Consulta de vendas</h3>
    <br />

    <script type="text/javascript">
		jQuery( document ).ready( function( $ ) {
			var $table4 = jQuery( "#table-4" );

			$table4.DataTable( {
				dom: 'Bfrtip',
				buttons: [
					'pdfHtml5',
					'excelHtml5'
				]
			} );
		} );
    </script>

    <table class="table table-bordered datatable" id="table-4">
        <thead>
            <tr>
                <th>Código da compra</th>
                <th>Código do cliente</th>
                <th>Cliente</th>
                <th>Total</th>
                <th>Endereco</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in ViewBag.Vendas)
            {
            <tr>
                <th style="width: 100px;">@v.Id</th>
                <th>@v.ClienteId</th>
                @foreach (var c in ViewBag.Cli)
                {
                    if (c.Id == v.ClienteId)
                    {
                        <th style="width: 360px;">@c.Nome</th>
                    }
                }
                <th>@v.Total</th>

                @foreach (var e in ViewBag.End)
                {
                    if (e.Id == v.EnderecoId)
                    {
                        <th>@e.CEP - Número:@e.Numero</th>
                    }
                }

                <th>@v.Data</th>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>





