@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-9">
        <canvas id="line-chart" width="600"></canvas>
    </div>

    <div class="col-2" style="padding-top: 64px;">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand">
                <h2 class="mdl-card__title-text">Falta em estoque</h2>
            </div>
            <div class="mdl-card__actions mdl-card--border"">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                    Ver todos
                </a>
            </div>
        </div>
        
        <br />
        <br />

        <div class="demo-card-square mdl-card mdl-shadow--2dp" style="margin-top: 5px;">
            <div class="mdl-card__title mdl-card--expand">
                <h2 class="mdl-card__title-text">Banners ativos</h2>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                    Ver todos
                </a>
            </div>
        </div>

    </div>

</div>

<script type="text/javascript">
    new Chart(document.getElementById("line-chart"), {
        type: 'line',
        data: {
            labels: ["Jan", "Fev", "Mar", "Abr", "Mai", "Jun", "Jul", "Ago", "Set", "Out", "Nov", "Dez"],
            datasets: [{
                data: [100, 114, 106, 106, 107, 111, 133, 221, 783, 600],
                label: "Livros",
                borderColor: "#3e95cd"
            }, {
                data: [90, 350, 411, 502, 635, 809, 947, 1402, 300, 267],
                label: "Mangás",
                borderColor: "#8e5ea2"
            }, {
                data: [12, 170, 178, 190, 203, 276, 408, 547, 675, 734],
                label: "DvDs",
                borderColor: "#3cba9f"
            }, {
                data: [80, 20, 10, 16, 24, 38, 74, 167, 508, 784],
                label: "Acessórios",
                borderColor: "#e8c3b9"
            }
            ]
        },
        options: {
            title: {
                display: true,
                text: 'Produtos mais vendidos (por categoria)',
                responsive: false,
                maintainAspectRatio: false
            }
        }
    });
</script>