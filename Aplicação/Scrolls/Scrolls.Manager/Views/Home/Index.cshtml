@{
    ViewBag.Title = "Home";
}


<div class="sidebar-menu">

    <div class="sidebar-menu-inner" style="position: fixed !important;">



        <div class="sidebar-user-info" id="side_perfil">
            <div class="sui-normal">
                <a href="/Home/Perfil" class="user-link">
                    <img src="@Session["_Imagem"]" width="55" alt="" class="img-circle">
                </a>
            </div>
        </div>


    </div>

</div>

<div class="main-content" style="background-color: #efebe9;">

    <div class="row">
        <div class="col-sm-12">
            <div class="well" style="background-color: #fff !important;">
                <h1>@ViewBag.Date</h1>
                <h3>Bem-vindo novamente <strong>@Session["_Nome"]</strong></h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <div class="panel panel-primary panel-table">
                <div class="panel-heading">
                    <div class="panel-title" style="padding-bottom: 15px;">
                        <h3>Mais vendidos</h3>
                        <br />
                        <span>Estatísticas mensais da Scrolls</span>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-responsive no-margin">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Vendas</th>
                                <th class="text-center">Quantidade em estoque</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td>Harry Potter</td>
                                <td>0</td>
                                <td class="text-center"><span class="top-apps">300</span></td>
                            </tr>

                            <tr>
                                <td>Percy Jackson</td>
                                <td>0</td>
                                <td class="text-center"><span class="top-apps">0</span></td>
                            </tr>

                            <tr>
                                <td>Como treinar seu dragão</td>
                                <td>0</td>
                                <td class="text-center"><span class="top-apps">98</span></td>
                            </tr>


                            <tr>
                                <td>Eragon</td>
                                <td>0</td>
                                <td class="text-center"><span class="top-apps">231</span></td>
                            </tr>


                            <tr>
                                <td>Drácula</td>
                                <td>0</td>
                                <td class="text-center"><span class="top-apps">67</span></td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <div class="col-md-4">
            <div class="tile-stats tile-primary" style="background: #287fb8;">
                <div class="icon"><i class="entypo-users"></i></div>
                <div class="num" data-start="0" data-end="@ViewBag.Cli" data-postfix="" data-duration="1400" data-delay="0">0</div>

                <h3>Novos Clientes</h3>
                <p>Estatística mensal de cadastros da Scrolls</p>
            </div>

            <br />

            <div class="tile-progress tile-red" style="background-color: #f79d1e;">
                <div class="tile-header">
                    <h3>Vendas</h3>
                    <span>0 vendas realizadas até o momento</span>
                </div>

                <div class="tile-progressbar">
                    <span data-fill="0%"></span>
                </div>

                <div class="tile-footer">
                    <h4>
                        <span class="pct-counter">0</span>% de acréscimo
                    </h4>

                    <span>% em relação as vendas do mês anterior</span>
                </div>
            </div>
        </div>
    </div>
</div>