
@{
    ViewBag.Title = "Perfil";
}

<div class="main-content">

    <div class="profile-env">

        <header class="row">

            <div class="col-sm-2">

                <a href="#" class="profile-picture">
                    <img src="~/Assets/images/profile-picture.png" class="img-responsive img-circle" />
                </a>

            </div>

            <div class="col-sm-7" style="padding-top: 10px;">

                <ul class="profile-info-sections">
                    <li>
                        <div class="profile-name">
                            <strong>
                                <a href="#">@Session["_Nome"]</a>
                            </strong>
                            <span><a href="#">Email</a></span>
                        </div>
                    </li>

                </ul>

            </div>
        </header>

        <section class="profile-info-tabs">

            <div class="row">

                <div class="col-sm-offset-2 col-sm-10">

                    <ul class="user-details">
                        <li>
                            <a href="#">
                                <i class="entypo-location"></i>
                                Brasil, São Paulo
                            </a>
                        </li>

                        <li>
                            <a href="#">
                                <i class="entypo-suitcase"></i>
                                Trabalha como <span>@Session["_Tipo"]</span>
                            </a>
                        </li>

                        <li>
                            <a href="#">
                                <i class="entypo-calendar"></i>
                                rola/no/seuco
                            </a>
                        </li>
                    </ul>


                    <!-- tabs for the profile links -->
                    <ul class="nav nav-tabs">
                        <li><a href="#end" data-toggle="tab">Endereços</a></li>
                        <li><a href="#card" data-toggle="tab">Cartões</a></li>
                        <li><a href="#com" data-toggle="tab">Avaliações</a></li>
                        <li><a href="#edt" data-toggle="tab">Editar perfil</a></li>
                    </ul>
                </div>
            </div>
        </section>

        <div class="row">
            <div class="col-sm-12">
                <div class="tab-content">
                    <div class="tab-pane" id="end">
                        <script type="text/javascript">
                            jQuery(document).ready(function ($) {
                                var $tablee = jQuery("#table-e");

                                var tablee = $tablee.DataTable({
                                    "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
                                });

                                // Initalize Select Dropdown after DataTables is created
                                $tablee.closest('.dataTables_wrapper').find('select').select2({
                                    minimumResultsForSearch: -1
                                });

                                // Apply the search
                                tablee.columns().every(function () {
                                    var that = this;

                                    $('input', this.footer()).on('keyup change', function () {
                                        if (that.search() !== this.value) {
                                            that
                                                .search(this.value)
                                                .draw();
                                        }
                                    });
                                });
                            });
                        </script>


                        <table class="table table-bordered datatable" id="table-e">
                            <thead>
                                <tr class="replace-inputs">
                                    <th>CEP</th>
                                    <th>País</th>
                                    <th>Estado</th>
                                    <th>Cidade</th>
                                    <th>Logradouro</th>
                                    <th>Número</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="tab-pane" id="card">
                        <script type="text/javascript">
                            jQuery(document).ready(function ($) {
                                var $tablec = jQuery("#table-c");

                                var tablec = $tablec.DataTable({
                                    "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
                                });

                                // Initalize Select Dropdown after DataTables is created
                                $tablec.closest('.dataTables_wrapper').find('select').select2({
                                    minimumResultsForSearch: -1
                                });

                                // Apply the search
                                tablec.columns().every(function () {
                                    var that = this;

                                    $('input', this.footer()).on('keyup change', function () {
                                        if (that.search() !== this.value) {
                                            that
                                                .search(this.value)
                                                .draw();
                                        }
                                    });
                                });
                            });
                        </script>


                        <table class="table table-bordered datatable" id="table-c">
                            <thead>
                                <tr class="replace-inputs">
                                    <th>Número</th>
                                    <th>Nome</th>
                                    <th>Validade</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="tab-pane" id="com">
                        <script type="text/javascript">
                            jQuery(document).ready(function ($) {
                                var $tablea = jQuery("#table-a");

                                var tablea = $tablea.DataTable({
                                    "aLengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
                                });

                                // Initalize Select Dropdown after DataTables is created
                                $tablea.closest('.dataTables_wrapper').find('select').select2({
                                    minimumResultsForSearch: -1
                                });

                                // Apply the search
                                tablea.columns().every(function () {
                                    var that = this;

                                    $('input', this.footer()).on('keyup change', function () {
                                        if (that.search() !== this.value) {
                                            that
                                                .search(this.value)
                                                .draw();
                                        }
                                    });
                                });
                            });
                        </script>


                        <table class="table table-bordered datatable" id="table-a">
                            <thead>
                                <tr class="replace-inputs">
                                    <th>Produto</th>
                                    <th>Nota</th>
                                    <th>Comentário</th>
                                    <th>Data</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="tab-pane" id="edt">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


