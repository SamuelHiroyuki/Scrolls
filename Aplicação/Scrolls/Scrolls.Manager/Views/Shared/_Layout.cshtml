<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/MaterialDesignLite/material.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css"/>
</head>
<body>

    @*
        Produto
            Cadastro
            Promoção
            Código de desconto (apenas se der tempo)
            Em falta (mostra apenas os q tem 0 de qtd)
            Consulta

        Funcionário
            Cadastro
            Consulta

        Consulta
            Cliente
            Produto
            Funcionario
            Vendas

        Mapa
            Cadastro Banner
            Visão Geral Banner
            Visualizar loja (se der tempo)

        Vendas
            Realizar
            Consulta
    *@


    <div class="wrapper">

        <nav id="sidebar">
            <div class="sidebar-header">

                <div class="user-pic d-flex justify-content-center">
                    <img src="~/Resources/avatar-01.jpg" />
                </div>

                <div class="text-center">
                    <span>Nome</span>
                    <br />
                    <span>email@emai.com</span>
                </div>

            </div>


            <br />
            <br />

            <ul class="list-unstyled">
                <li>
                    <a href="#dropFunc" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Funcionário</a>
                    <ul class="collapse list-unstyled" id="dropFunc">
                        <li>
                            <a href="#">Cadastro</a>
                        </li>
                        <li>
                            <a href="#">Consultar</a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="#dropProd" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Produto</a>
                    <ul class="collapse list-unstyled" id="dropProd">
                        <li>
                            <a href="#">Cadastro</a>
                        </li>
                        <li>
                            <a href="#">Promoção</a>
                        </li>
                        <li>
                            <a href="#">Código de desconto</a>
                        </li>
                        <li>
                            <a href="#">Em falta</a>
                        </li>
                        <li>
                            <a href="#">Consultar</a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="#dropMap" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Mapa</a>
                    <ul class="collapse list-unstyled" id="dropMap">
                        <li>
                            <a href="#">Configurar banner</a>
                        </li>
                        <li>
                            <a href="#">Gerenciar banners</a>
                        </li>
                        <li>
                            <a href="#">Visualizar loja</a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="#dropVen" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Vendas</a>
                    <ul class="collapse list-unstyled" id="dropVen">
                        <li>
                            <a href="#">Realizar venda</a>
                        </li>
                        <li>
                            <a href="#">Consultar</a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="#">Consultar</a>
                </li>
            </ul>
        </nav>


        <div class="container-fluid" id="content">
            @RenderBody()
        </div>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-0" id="pnav">
            <div class="container-fluid p-3">
                <a class="navbar-brand" href="#">Scrolls</a>
            </div>

            <button id="demo-menu-lower-right" class="mdl-js-button bg-dark border-0 p-t-b-10 flexbox">
                <img src="~/Resources/avatar-01.jpg" class="avatar" />
                <span class="pl-3 pr-3">Jotinha</span>
            </button>

            <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="demo-menu-lower-right">
                <li class="mdl-menu__item">Some Action</li>
                <li class="mdl-menu__item">Another Action</li>
                <li class="mdl-menu__item">Yet Another Action</li>
            </ul>

        </nav>
    </div>


    <script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/MaterialDesignLite/material.min.js"></script>
</body>
</html>
