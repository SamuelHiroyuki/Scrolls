<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/gest"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuar sem conta"
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:textSize="15dp"
        android:textColor="#4286f4"
        android:id="@+id/txtSemLogin"
        android:onClick="MainEntrarSemLogin"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Inscreva-se Grátis"
        android:layout_marginTop="10dp"
        android:id="@+id/btnInscrever"
        android:onClick="MainInscrever"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Já possui uma conta na Scrolls?"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:id="@+id/btnEntrar"
        android:onClick="MainEntrar"/>

</LinearLayout>