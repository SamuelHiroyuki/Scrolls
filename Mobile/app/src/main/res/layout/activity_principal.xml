<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/PretoPrincipal"
            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bookicon"
                />

            <EditText
                android:layout_width="230dp"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/googleicon"
                android:hint="Pesquisar..."
                android:background="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bookicon"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></ListView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/bookicon" />

        <TextView
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:text="Lançamentos e reposições"
            android:textSize="26dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/googleicon"
            android:textColor="@color/PretoPrincipal"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:text="Mais Avaliados"
            android:textSize="26dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp"
            android:drawableRight="@drawable/googleicon"
            android:textColor="@color/PretoPrincipal"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="390dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            >


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>