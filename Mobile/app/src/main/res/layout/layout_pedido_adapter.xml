<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/book_true_icon"
            android:id="@+id/ImagePedidos"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do livro"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@color/PretoPrincipal"
            android:id="@+id/NomePedidos"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PreÃ§o"
            android:textColor="@color/PretoPrincipal"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:id="@+id/PrecoPedidos"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade"
                android:textColor="@color/PretoPrincipal"
                android:layout_marginLeft="70dp"
                android:textSize="20sp"
                android:id="@+id/QuantPedidos"
                />
        </LinearLayout>
    </LinearLayout>



