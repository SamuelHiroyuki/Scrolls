<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do titular do cartão"
        android:textColor="@color/PretoPrincipal"
        android:textSize="26sp"
        android:textAlignment="viewStart"
        android:layout_marginLeft="20dp"
        android:id="@+id/NomeCartão"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empresa do cartão"
            android:id="@+id/EmpresaCartão"
            android:textColor="@color/PretoPrincipal"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero do cartão"
            android:layout_marginLeft="30dp"
            android:textColor="@color/PretoPrincipal"
            android:textSize="16sp"
            android:id="@+id/NumCartão"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/book_true_icon"
            android:layout_marginLeft="20dp"
            android:id="@+id/ImgLixo"
            />
    </LinearLayout>

</LinearLayout>