<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#acacac"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/iche" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Pesquisar" />

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/lupa" />

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/car"
                android:id="@+id/btnCarrinho"
                android:onClick="PrincipalCarrinho"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/esquerda" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/geek" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/fant" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/sify" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/susp" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/direita" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/promo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="250dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/hp1"
                android:id="@+id/imgLivro1"
                android:onClick="PrincipalProduto"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="250dp"
                android:layout_marginLeft="85dp"
                android:src="@drawable/hp2"
                android:id="@+id/imgLivro2"
                android:onClick="PrincipalProduto"/>


        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Mapa"
            android:id="@+id/btnMapa"
            android:onClick="PrincipalMapa"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Comprar com QR"
            android:id="@+id/btnQR"
            android:onClick="PrincipalQR"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Configurações"
            android:id="@+id/btnConfig"
            android:onClick="PrincipalConfig"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Avalie-nos"
            android:layout_marginBottom="100dp"
            android:id="@+id/btnAvaliar"
            android:onClick="PrincipalAvaliar"/>

    </LinearLayout>

</ScrollView>